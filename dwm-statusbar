#!/bin/sh

printbat(){
    percent=$(\
        expr $(acpi -b | grep -Eo "[0-9]+%"\
        | cut --delimiter="%" --fields=1) + 0\
    )

    if acpi | grep "Charging" > /dev/null 2>&1
    then
        printf "ğŸ”Œ%3s%%" $percent
    else
        if [ $percent -gt 20 ]
        then
            printf "ğŸ”‹%3s%%" $percent
        else
            printf "ğŸª«%3s%%" $percent
        fi
    fi
}

printvolume() {
    vstate=$(\
        amixer get Master\
        | tail -n1\
        | cut --delimiter=" " --fields=8\
    )

    percentage=$(\
        amixer get Master\
        | tail -n1\
        | grep -oE "[0-9]*%"\
    )

    case $vstate in
        "[on]") printf "ğŸ””%3s" $percentage;;
        "[off]") echo "ğŸ”•";;
    esac
}

printdate(){
    t=$(date '+%H:%M')

    echo "â°$t"
}

printwifi(){
    ssid=$(\
        iw dev wlp8s0 link\
        | grep -Eo "SSID: (.*)"\
        | sed "s/SSID: //"\
    )

    [ -z $ssid ] && echo "ğŸš«" || echo "ğŸ›œ$ssid"
}

xsetroot -name "|$(printdate)| |$(printwifi)| |$(printbat)| |$(printvolume)|"
